extends views/layouts/default.pug

block content
    main.flex-1.bg-gray-800.text-gray-100
        section.py-20.flex.flex-col.items-center
            h2(class='text-5xl mt-8') Meet my clients
            .my-4
            p My clients are awesome, and I'm proud to have worked with them.
            p
                = "Want to be the next? Contact me at  "
                a(class="text-blue-200 hover:underline" href='mailto:hello@sondregronas.com') hello@sondregronas.com
                = "."
            div(class='flex flex-wrap justify-center items-center mt-8 text-center')
                for client in clients
                    a(class='m-4 hover:scale-110 duration-300 ease-in-out' href=client.url target='_blank')
                        div(class='flex flex-col basis-1/4 items-center justify-center w-64 h-64 p-4 bg-gray-700 rounded-lg shadow-lg')
                            // img(class='w-32 h-32 rounded-full' src=client.logo)
                            p(class='text-xl mt-4 font-medium')=client.name
                            p(class='text-xs text-gray-400')=client.role
                            p(class='text-med my-2')=client.project

